
<% layout("/layouts/boilerplate") %>
<body>
    <h3>Listing details:</h3>
    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price %></li>
        <!-- .toLocateString("en-IN") -->
